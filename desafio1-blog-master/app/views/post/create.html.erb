<% if @post.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@post.errors.count, "error") %>
	prohibited this article to being published:
		</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% else%>
	<h1>Articulo creado con exito</h1>	
<% end %>